<beans
xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
               
               
<bean id="BankAccount" class="springcore.bankaccount.BankAccount">
<property name="accountId" value="1234567"></property>
<property name="accountHolderName" value="Bharath"></property>
<property name="accountType" value="Saving Account"></property>
<property name="accountBalance" value="1000"></property>
</bean>

</beans>